<p id="notice"><%= notice %></p>

<h1>Listing Cinemas</h1>

<table>
  <thead>
    <tr>
      <th>Screen name</th>
      <th>Seat name</th>
      <th>Seat type</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cinemas.each do |cinema| %>
      <tr>
        <td><%= cinema.screen_name %></td>
        <td><%= cinema.seat_name %></td>
        <td><%= cinema.seat_type %></td>
        <td><%= cinema.price %></td>
        <td><%= link_to 'Show', cinema %></td>
        <td><%= link_to 'Edit', edit_cinema_path(cinema) %></td>
        <td><%= link_to 'Destroy', cinema, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

